<body>

    <div class="middle-container">
        <div class="container">
            <div class="level-right">
                <p class="level-item">
                    <%= link_to "Edit", edit_blog_path(@blog), class: "button" %>
                </p>
                <p class="level-item">
                    <%= link_to "Delete", blog_path(@blog), method: :delete, data: { confirm: "Are you sure you want to delete this post?"}, class: "button is-danger" %>
                </p>
                <p class="level-item">
                    <%= link_to "Back", blogs_path %>
                </p>
            </div>
                
            
            
    
            <div>
                <h1><%= @blog.title %></h1>
            </div>
            <div>
                <h5><%= @blog.content %></h5>
            </div>
            <%= image_tag("gallery/forbidden2.jpg", :alt => "Forbidden City", :class => "img-fluid") %>
            
        </div>
    </div>

</body>




