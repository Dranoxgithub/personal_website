<body>

    <div class="middle-container">
        <div class="container">
            <nav class="level">
                <div class="level-left">
                    <p class="level-item">
                        <strong>Actions</strong>
                    </p>
                </div>
                
    
                <div class="level-right">
                    <p class="level-item">
                        <%= link_to "Edit", edit_blog_path(@blog), class: "button" %>
                    </p>
                    <p class="level-item">
                        <%= link_to "Delete", blog_path(@blog), method: :delete, data: { confirm: "Are you sure you want to delete this post?"}, class: "button is-danger" %>
                    </p>
                    <p class="level-item">
                        <%= link_to "Back", blogs_path %>
                    </p>
                </div>
            </nav>
    
            <div>
                <%= @blog.title %>
            </div>
            <div>
                <%= @blog.content %>
            </div>
        </div>
    </div>

</body>




