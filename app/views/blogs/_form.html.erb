
<div class="middle-container">
<%= form_with(model: blog, local: true) do |form| %>

  <div class="form-group">
    <label for="blogTitle" class="col-sm-2 col-form-label">Title</label>
    <div class="col-sm-10">
      <%= form.text_field :title, input_html: { class: "form-control"}%>
    </div>
  </div>
  <div class="form-group">
    <label for="blogContent" class="col-sm-2 col-form-label">Summary</label>
    <div class="col-sm-10">
      <%= form.text_field :content, input_html: { class: "form-control"}%>
    </div>
  </div>
  <div class="form-group">
    <label for="blogBody" class="col-sm-2 col-form-label">Body</label>
    <div class="col-sm-10">
      <%= form.rich_text_area :body, input_html: { class: "form-control"}%>
    </div>
  </div>
  <div class="form-group">
    <div class="actions">
      <%= form.submit %>
    </div>
  </div>
  <% end %>
  

  
  

  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
        <% blog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  

</div>