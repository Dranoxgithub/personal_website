
<div class="middle-container">
<%= form_with(model: @blog, local: true) do |form| %>

  <div class="form-group row">
    <label for="blogTitle" class="col-sm-2 col-form-label">Title</label>
    <div class="col-sm-10">
      <%= form.text_field :title, input_html: { class: "form-control-plaintext"}%>
    </div>
  </div>
  <div class="form-group row">
    <label for="blogContent" class="col-sm-2 col-form-label">Content</label>
    <div class="col-sm-10">
      <%= form.text_area :content, input_html: { class: "col-lg-6 col-md-8 col-sm-12 gallery-box"}%>
    </div>
  </div>
  

  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
        <% blog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>